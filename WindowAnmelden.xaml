<Window x:Class="BankingSystem.WindowAnmelden"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankingSystem"
        mc:Ignorable="d"
        Title="WindowAnmelden" Height="400" Width="600" Loaded="Window_Loaded">
    <Grid x:Name="MainGrid">
        <Button x:Name="ButtonAnmelden" Height="80" Width="400" HorizontalAlignment="Center" Margin="0,0,0,100" Click="ButtonAnmelden_Click">Anmelden</Button>
        <Button x:Name="ButtonRegistrieren" Height="80" Width="400" HorizontalAlignment="Center" Margin="0,100,0,0" Click="ButtonRegistrieren_Click">Registrieren</Button>
    </Grid>
</Window>
